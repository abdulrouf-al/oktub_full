<% layout('/layouts/boilerplate') %> 

 
 
<div class="container" dir="rtl">
  <div class="row">
      <div class="col-lg-10 mx-auto my-5">
<div class="mb-3 w-50">
<form action="/signup" method="POST" class="validated-form" novalidate>
<h2>سجل الدخول </h2>
<label for="username" class="form-label fw-bold">اسم المستخدم</label>
<input  class="form-control mb-3" type="text" name="username" required />
<div class="password error"></div>
<div class="valid-feedback"></div>
<label for="email" class="form-label fw-bold">الإيميل</label>
<input class="form-control mb-3" type="text" name="email" required />
<div class="valid-feedback"></div>
<label for="password" class="form-label fw-bold">كلمة السر</label>
<input  class="form-control mb-3" type="password" name="password" required />
<div class="password error"></div>
<div class="valid-feedback"></div>

<button class="btn btn-secondary fw-bold mt-2">سجلني</button>
</form>
</div>
</div>
</div>
</div>

