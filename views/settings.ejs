<% layout('/layouts/boilerplate') %>
    <main>
        <div class="container">
            <div class="row">
                <div class="col-lg-8 mx-auto">
                    <div class="my-5">
                        <div class="d-flex mb-4 align-items-center"><span class="font-weight-bold text-secondary h5">
                                personal info
                            </span>
                            <div class="ml-3 border-bottom flex-1"></div>
                        </div>
                        <form method="POST"  action="/settings?_method=PUT" enctype="multipart/form-data" class="col-lg-10 px-0">
                            <input type="hidden" name="_token" value="HfRWnIdEHwfXvcqZOLP6RhKzjARGvlEahU6Z2hcq">
                            <input type="hidden" name="_method" value="PATCH">
                            <div class="form-group mb-4">
                                <div class="avatar-wrapper mx-auto shadow">
                                    <img src="<%= user.image %>" width="200px" height="200px"
                                        alt="<%= user.username  %>" class="profile-pic">
                                    <div class="upload-button"><strong class="profile-pic-overlay-image"><i
                                                aria-hidden="true"
                                                class="profile-pic-camera-icon fa fa-camera text-white"></i></strong>
                                    </div> 
                                    <input  type="file" name="imageInput"  class="file-upload">
                                </div>
                            </div>
                            <div class="form-group mb-4">
                                <input type="text" id="name" required="required" name="username"
                                    value="<%= user.username  %>" placeholder="name@example.com"
                                    class="form-control background-body-bg-color ">
                            </div>
                            <div class="form-group mb-4">
                                <input id="bio" name="bio" required="required" rows="3" placeholder="bio"
                                 value=" <%= user.bio %>"   class="form-control background-body-bg-color">
                               
                            </div>
                            <div class="d-flex mb-4 align-items-center"><span
                                    class="font-weight-bold text-secondary h5">
                                    account
                                </span>
                                <div class="ml-3 border-bottom flex-1"></div>
                            </div>
                            <div class="form-group mb-4"><input type="email" id="email" required="required" name="email"
                                    value="<%= user.email  %>" placeholder="name@example.com"
                                    class="form-control background-body-bg-color "></div>
                            <div class="form-group mb-4">
                                <input type="password" id="password" name="password" placeholder="password" class="form-control background-body-bg-color"></div>
                            <button class="btn btn-primary text-white px-4 font-weight-bold">
                                save
                            </button>
                        </form>
                    </div>
                    <div class="my-5">
                        <div class="d-flex mb-4 align-items-center"><span class="font-weight-bold text-secondary h5">
                                controls
                            </span>
                            <div class="ml-3 border-bottom flex-1"></div>
                        </div> <a href="/" data-toggle="tooltip" data-placement="top" title=""
                            class="btn btn-primary shadow-sm text-white font-weight-bold mr-3 px-4"
                            data-original-title="nabtob">
                            reconnect with Twitter
                        </a>
                        <div class="d-flex mt-4"><a href="/"
                                class="btn bg-light-secondary shadow-sm text-dark font-weight-bold mr-3 px-4">download
                                blogs
                            </a> <button type="submit"
                                class="delete-account-btn btn bg-white shadow-sm text-danger font-weight-bold px-4">
                                delete account
                            </button>
                            <form method="POST" action="/" class="delete-account-form"><input type="hidden"
                                    name="_token" value="HfRWnIdEHwfXvcqZOLP6RhKzjARGvlEahU6Z2hcq">
                                <input type="hidden" name="_method" value="DELETE">
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </main>