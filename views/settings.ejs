<% layout('/layouts/boilerplate') %> 
        <main>
            <div class="container">
                <div class="row">
                    <div class="col-lg-8 mx-auto">
                        <div class="my-5">
                            <div class="d-flex mb-4 align-items-center"><span class="font-weight-bold text-secondary h5">
                                    المعلومات الشخصية
                                </span>
                                <div class="ml-3 border-bottom flex-1"></div>
                            </div>
                            <form enctype="multipart/form-data" method="POST" action="https://oktob.io/users/nabtob"
                                class="col-lg-10 px-0"><input type="hidden" name="_token"
                                    value="HfRWnIdEHwfXvcqZOLP6RhKzjARGvlEahU6Z2hcq"> <input type="hidden"
                                    name="_method" value="PATCH">
                                <div class="form-group mb-4">
                                    <div class="avatar-wrapper mx-auto shadow">
                                        <img src="<%= user.image %>" width="200px" height="200px"
                                            alt="<%= user.username  %>" class="profile-pic">
                                        <div class="upload-button"><strong class="profile-pic-overlay-image"><i
                                                    aria-hidden="true"
                                                    class="profile-pic-camera-icon fa fa-camera text-white"></i></strong>
                                        </div> <input name="avatar" type="file" accept="image/*" class="file-upload">
                                    </div>
                                </div>
                                <div class="form-group mb-4">
                                    <input type="text" id="name" required="required"
                                        name="name" value="<%= user.username  %>" placeholder="name@example.com"
                                        class="form-control background-body-bg-color "></div>
                                <div class="form-group mb-4">
                                    <textarea id="bio" name="bio" required="required" rows="3"
                                        class="form-control background-body-bg-color "> <%= user.bio %> </textarea></div>
                                <div class="d-flex mb-4 align-items-center"><span
                                        class="font-weight-bold text-secondary h5">
                                        حساب اكتب
                                    </span>
                                    <div class="ml-3 border-bottom flex-1"></div>
                                </div>
                                <div class="form-group mb-4"><input type="email" id="email" required="required"
                                        name="email" value="<%= user.email  %>" placeholder="name@example.com"
                                        class="form-control background-body-bg-color "></div>
                                <div class="form-group mb-4"><input type="password" id="password" name="password"
                                        placeholder="كلمة المرور" class="form-control background-body-bg-color "></div>
                                <button type="submit" class="btn btn-primary text-white px-4 font-weight-bold ">
                                    حفظ التغييرات
                                </button>
                            </form>
                        </div>
                        <div class="my-5">
                            <div class="d-flex mb-4 align-items-center"><span class="font-weight-bold text-secondary h5">
                                    خيارات التحكم
                                </span>
                                <div class="ml-3 border-bottom flex-1"></div>
                            </div> <a href="https://oktob.io/auth/twitter" data-toggle="tooltip" data-placement="top"
                                title="" class="btn btn-primary shadow-sm text-white font-weight-bold mr-3 px-4"
                                data-original-title="nabtob">
                                اعادة ربط مع تويتر
                            </a>
                            <div class="d-flex mt-4"><a href="https://oktob.io/download"
                                    class="btn bg-light-secondary shadow-sm text-dark font-weight-bold mr-3 px-4">تحميل
                                    المقالات</a> <button type="submit"
                                    class="delete-account-btn btn bg-white shadow-sm text-danger font-weight-bold px-4">
                                    حذف الحساب كاملا
                                </button>
                                <form method="POST" action="https://oktob.io/users" class="delete-account-form"><input
                                        type="hidden" name="_token" value="HfRWnIdEHwfXvcqZOLP6RhKzjARGvlEahU6Z2hcq">
                                    <input type="hidden" name="_method" value="DELETE"></form>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </main>
